+	mi->id = -1;
+	*mi->label = '\0';
+	mi->has_submenu = 0;
+}
+
+static void
+submenus_destroy_recursive(struct wl_array *layout_node)
+{
+	MenuItem *mi;
+
+	wl_array_for_each(mi, layout_node) {
+		if (mi->has_submenu) {
+			submenus_destroy_recursive(&mi->submenu);
+			wl_array_release(&mi->submenu);
+		}
+	}
+}
+
+static void
+menu_destroy(Menu *menu)
