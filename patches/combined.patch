+		wl_event_source_remove(ctx->fd_source);
+
+	if (ctx->fd >= 0)
+		close(ctx->fd);
+
+	if (ctx->menu_pid >= 0) {
+		if (waitpid(ctx->menu_pid, NULL, WNOHANG) == 0)
+			kill(ctx->menu_pid, SIGTERM);
+	}
+
+	if (error)
+		menu_destroy(ctx->menu);
+
+	free(ctx);
+}
+
+static void
+remove_newline(char *buf)
